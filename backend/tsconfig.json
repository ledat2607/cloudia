    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node"]  // Thêm dòng này
  },
  "include": ["*.ts", "config/*.ts", "models/*.ts", "routes/*.ts"],
